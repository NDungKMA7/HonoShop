@using EcommerceProject.Models.Mapping;
@{
    string breadcrumbName = ViewBag.breadcrumb;
    var controller = ViewContext.RouteData.Values["controller"];
} 

 <!-- ...:::: Start Breadcrumb Section:::... -->
    <div class="breadcrumb-section breadcrumb-bg-color--golden">
        <div class="breadcrumb-wrapper">
            <div class="container">
                <div class="row">
                    <div class="col-12">

                    <h3 class="breadcrumb-title">@controller - @if (breadcrumbName != null)
                        {
                            @breadcrumbName
                        }else{
                            <text>Page</text>
                        }
                    </h3>
                    <div class="breadcrumb-nav breadcrumb-nav-color--black breadcrumb-nav-hover-color--golden">
                            <nav aria-label="breadcrumb">
                                <ul>
                                    <li><a href="/Home">Home</a></li>
                                    <li><a href="/Products/Index">@controller</a></li>
                                    <li class="active" aria-current="page">@controller -   @if (breadcrumbName != null)
                        {
                            @breadcrumbName
                        }else{
                            <text>Page</text>
                        }</li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- ...:::: End Breadcrumb Section:::... -->