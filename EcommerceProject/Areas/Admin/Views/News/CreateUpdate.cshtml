@using EcommerceProject.Models.Mapping;
@{
    //load file Layout.cshtml vao day
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
}
@{
    List<ItemListArticle> ListArticle = ViewBag.ListArticle;
    
}
 
 <div class="content-wrapper">
    <div class="container-xxl flex-grow-1 container-p-y">
        <div class="col-xxl">
            <div class="card mb-4">
                <div class="card-header d-flex align-items-center justify-content-between">
                    <h5 class="mb-0">Add & Edit Form</h5>
                </div>
                <div class="card-body">
                    <form method="post" action="@ViewBag.action" enctype="multipart/form-data">
                        <div class=" mb-3">
                            <label for="name" class="form-label">Name</label>
                            <input type="text" id="name" class="form-control" name="name" required value="@if(Model != null){
                    <text>@Model.Name</text>
}" />
                        </div>
                        
                        <div class="  mb-3">
                            <label for="_idListArticle" class="form-label">List Of Articles</label>
                            <select class="form-select" name="_idListArticle"  id="_idListArticle">
                                @foreach(var item in ListArticle)
                                {
                                <option @if(Model!=null && Model.ListArticleId == item.Id){
                                    <text>selected</text> } value="@item.Id">@item.Name</option>
                                }
                            </select>
                        </div>
                        <div class=" mb-3">
                            <label for="formFileMultiple" class="form-label">Upload Files</label>
                            <input class="form-control" type="file" id="formFileMultiple" name="Photo" multiple />
                        </div>
                        <div class="form-check mt-3">
                            <label class="form-check-label" for="hot"> Hot </label>
                            <input class="form-check-input" type="checkbox" name="hot" id="hot" @if(Model !=null &&
                                Model.Hot==1){<text>checked</text>}/>

                        </div>
                        <div class=" mb-3">
                            <label for="description" class="form-label">Description</label>
                            <textarea class="form-control" id="description" rows="3"
                                name="description">@if(Model!=null){<text>@Model.Description</text>}</textarea>
                            <script language="javascript">
                                CKEDITOR.replace("description");
                            </script>
                        </div>
                        <div class=" mb-3">
                            <label for="content" class="form-label">Content</label>
                            <textarea class="form-control" id="content" rows="3"
                                name="content">@if(Model!=null){<text>@Model.Content</text>}</textarea>
                            <script language="javascript">
                                CKEDITOR.replace("content");
                            </script>
                        </div>
                        <div class=" justify-content-end">
                            <div class="col-sm-10">
                                <button type="submit" class="btn btn-primary">Send</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>